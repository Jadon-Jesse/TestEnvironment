<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.tutor.AccountSettingsActivity2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="257dp"
                    android:layout_weight="30.33">


                    <ImageView
                        app:srcCompat="@drawable/bookss"
                        android:id="@+id/imgProfile"
                        android:layout_weight="0.31"
                        android:layout_marginTop="59dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_height="120dp"
                        android:layout_width="120dp" />

                    <Button
                        android:text="Change Picture"
                        android:layout_width="wrap_content"
                        android:id="@+id/btnupload"
                        android:layout_below="@+id/imgProfile"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="First Name:"
                            android:layout_width="146dp"
                            android:id="@+id/textView1"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:layout_height="20dp"
                            android:layout_below="@+id/textView"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_weight="1" />

                        <EditText
                            android:layout_width="146dp"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:text="Name"
                            android:ems="10"
                            android:id="@+id/edtName"
                            android:layout_alignBaseline="@+id/textView1"
                            android:layout_alignBottom="@+id/textView1"
                            android:layout_toRightOf="@+id/textView1"
                            android:layout_toEndOf="@+id/textView1"
                            android:textSize="17sp"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="Last Name:"
                            android:layout_width="146dp"
                            android:layout_height="20dp"
                            android:id="@+id/textView2"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:layout_below="@+id/textView1"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_weight="1" />

                        <EditText
                            android:layout_width="146dp"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:text="Surname"
                            android:ems="10"
                            android:id="@+id/edtSurname"
                            android:textSize="17sp"
                            android:layout_below="@+id/textView1"
                            android:layout_toRightOf="@+id/textView2"
                            android:layout_toEndOf="@+id/textView2"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="Student Number:"
                            android:layout_height="20dp"
                            android:id="@+id/textView"
                            android:layout_width="146dp"
                            android:textSize="17sp"
                            android:layout_alignBaseline="@+id/edtStudentNUmber"
                            android:layout_alignBottom="@+id/edtStudentNUmber"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:textColor="@color/black"
                            android:layout_weight="1" />

                        <EditText
                            android:layout_width="146dp"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:text="Student Number"
                            android:ems="10"
                            android:id="@+id/edtStudentNUmber"
                            android:textSize="17sp"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/textView"
                            android:layout_toEndOf="@+id/textView"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="Contact Number:"
                            android:layout_width="146dp"
                            android:layout_height="20dp"
                            android:id="@+id/textView4"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:layout_alignBaseline="@+id/edtContact"
                            android:layout_alignBottom="@+id/edtContact"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_weight="1" />

                        <EditText
                            android:layout_width="146dp"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:text="Contact"
                            android:ems="10"
                            android:id="@+id/edtContact"
                            android:textSize="17sp"
                            android:layout_below="@+id/textView3"
                            android:layout_toRightOf="@+id/textView5"
                            android:layout_toEndOf="@+id/textView5"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="Email:"
                            android:layout_width="146dp"
                            android:layout_height="20dp"
                            android:id="@+id/textView3"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:layout_below="@+id/textView2"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_weight="1" />

                        <EditText
                            android:layout_width="146dp"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:text="Email"
                            android:ems="10"
                            android:id="@+id/edtEmail"
                            android:textSize="17sp"
                            android:layout_below="@+id/textView2"
                            android:layout_toRightOf="@+id/textView2"
                            android:layout_toEndOf="@+id/textView2"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="Qulaifications:"
                            android:layout_width="146dp"
                            android:layout_height="20dp"
                            android:id="@+id/textView5"
                            android:layout_below="@+id/edtContact"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:layout_weight="1" />

                        <EditText
                            android:layout_width="146dp"
                            android:layout_height="wrap_content"
                            android:text="Qulaifications"
                            android:ems="10"
                            android:id="@+id/edtQualifications"
                            android:textSize="17sp"
                            android:layout_weight="1"
                            android:singleLine="false"
                            android:maxLength="100"
                            android:inputType="textMultiLine"
                            android:minLines="3" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="Password:"
                            android:id="@+id/textView6"
                            android:layout_below="@+id/edtQualifications"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="14dp"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:layout_width="146dp"
                            android:layout_height="40dp" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textPassword"
                                android:ems="10"
                                android:id="@+id/edtOldPassword"
                                android:singleLine="false"
                                android:hint="Old Password"
                                android:textSize="17sp"
                                android:layout_below="@+id/textView5"
                                android:layout_alignLeft="@+id/edtQualifications"
                                android:layout_alignStart="@+id/edtQualifications" />

                            <EditText
                                android:layout_width="146dp"
                                android:layout_height="wrap_content"
                                android:inputType="textPassword"
                                android:ems="10"
                                android:id="@+id/edtNewPassword"
                                android:hint="New Password"
                                android:textSize="17sp"
                                android:layout_alignTop="@+id/textView6"
                                android:layout_alignLeft="@+id/edtOldPassword"
                                android:layout_alignStart="@+id/edtOldPassword" />

                            <EditText
                                android:layout_width="146dp"
                                android:layout_height="wrap_content"
                                android:inputType="textPassword"
                                android:ems="10"
                                android:id="@+id/edtCNewPassword"
                                android:hint="Confirm Password"
                                android:textSize="17sp"
                                android:layout_below="@+id/textView6"
                                android:layout_alignLeft="@+id/edtNewPassword"
                                android:layout_alignStart="@+id/edtNewPassword"
                                android:layout_marginTop="11dp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:text="Update Profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnUpdate"
                android:layout_weight="1" />
        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/MyMaterialTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/MyMaterialTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>



</android.support.design.widget.CoordinatorLayout>
