<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_tutors"
        >

        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/tutorDp"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:src="@drawable/session"
                android:padding="10dp" />

            <TextView
                android:id="@+id/tutorNameTxt"
                android:text="Nivek Ranjit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tutorDp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:textSize="20sp" />



            <TextView
                android:id="@+id/quali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quals"
                android:layout_below="@id/tutorNameTxt"
                android:layout_toRightOf="@id/tutorDp"
                android:padding="15dp"/>


            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.4"
                android:scaleY="0.4"
                android:numStars="5"
                android:layout_toRightOf="@+id/tutorNameTxt"
                android:stepSize="0.1"
                android:id="@+id/ratingBar" />

            <Button
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/tutorDp"
                android:layout_below="@+id/quali"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="11dp"
                android:id="@+id/selectTutorBtn"
                android:background="@color/colorAccent"
                android:textColor="@android:color/white"
                android:text="Select"/>




        </RelativeLayout>




    </android.support.v7.widget.CardView>

</LinearLayout>
